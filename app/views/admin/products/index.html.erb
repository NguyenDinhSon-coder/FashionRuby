
<% provide(:title, 'Products') %>
  <div class="container">
  <%= link_to t("global.canpaigs.create1") , new_admin_canpaign_path, class: 'btn btn-success' %>
</div> <br>

<div class="container">
  <%= link_to t("global.canpaigs.create2"), new_admin_product_path, class: 'btn btn-success' %>
</div>


<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Setting</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product|%>
    <tr>
      <th scope="row">1</th>
      <td><%= product.id %></td>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td>
        <%= link_to t("global.canpaigs.delete"), product, method: :delete, data: { confirm: "You sure?" },class: 'btn btn-warning' %>
        </td>
      <td>
        <%= link_to t("global.canpaigs.edit"), edit_admin_product_path(product),class: 'btn btn-info' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


