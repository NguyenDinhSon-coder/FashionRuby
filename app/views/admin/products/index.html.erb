
<% provide(:title, 'Products') %>
  <div class="container">
  <%= link_to t("global.canpaigs.create1") , new_admin_canpaign_path, class: 'btn btn-success' %>
</div> <br>

<div class="container">
  <%= link_to t("global.canpaigs.create2"), new_admin_product_path, class: 'btn btn-success' %>
</div>


<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"><%= t("global.canpaigs.id") %></th>
      <th scope="col"><%= t("global.canpaigs.productname") %></th>
      <th scope="col"><%= t("global.canpaigs.price") %></th>
      <th scope="col"><%= t("global.canpaigs.edit") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each_with_index do |product, index|%>
    <tr>
      <td><%= index %></td>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td>
        <%= link_to t("global.canpaigs.delete"), product, method: :delete, data:  { confirm: t("global.canpaigs.yousure1") },class: 'btn btn-warning' %>
        </td>
      <td>
        <%= link_to t("global.canpaigs.edit"), edit_admin_product_path(product),class: 'btn btn-info' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


