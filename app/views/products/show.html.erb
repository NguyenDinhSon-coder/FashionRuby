<div class="breadcrumbs">
    <div class="container">
    </div>
</div>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <% @product.images.each do |image| %>
        <div class="item active">
            <%= image_tag image.variant(resize_to_limit: [500, 200]) %>
        </div>
        <% end %>
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="col-md-7 single-top-in">
    <div class="single-para simpleCart_shelfItem">
        <h2>
            <%= @product.name %>
        </h2>
        <div class="available">
            <h6>Available Options :</h6>
            <li> Size:
                <%= @product.size %>
            </li>
            <li>
                So luong :
                <%= @product.amount %>
            </li>
            <div id="rating1">count:
                <%= @product.ratings.count %>
            </div>
            </br>
            <div id="rating2"> avg:
                <%= @product.ratings.average(:total) %>
            </div>
            <% if logged_in? %>
            <div class="star-on">
                <ul>
                    <li>
                        <%= link_to "✰", product_ratings_path(@product, ratings: 1), method: :post, method: :post, remote: true %>
                    </li>
                    <li>
                        <%= link_to '✰',  product_ratings_path(@product, ratings: 2), method: :post, remote: true %>
                    </li>
                    <li>
                        <%= link_to '✰',  product_ratings_path(@product, ratings: 3) , method: :post, remote: true %>
                    </li>
                    <li>
                        <%= link_to '✰',  product_ratings_path(@product, ratings: 4) , method: :post, remote: true %>
                    </li>
                    <li>
                        <%= link_to '✰',  product_ratings_path(@product, ratings: 5) , method: :post,remote: true %>
                    </li>
                </ul>
            </div>
            <% end %>
            <label class="add-to item_price">$
                <%= @product.price %></label>
            <%= link_to "Add To Cart", cart_path, class: 'btn btn-primary' %>
            </button>
        </div>
    </div>
</div>
