<h1><%= t("global.canpaigs.update")%> </h1>
<div class="container">
  <div class="form-group">
  <%= form_for(@product)  do |f| %>
      <div class="form-group">
      <%= f.label t("global.canpaigs.productname") %>
      <%= f.text_field :name, placeholder: '....', class: 'form-control' %>
    </div>
    <%= f.select :catelogy_id, options_for_select(["....", "1", "2"])    %>

    <div class="form-group">
      <%= f.label t("global.canpaigs.price") %>
      <%= f.text_field :price, placeholder: "....", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label t("global.canpaigs.size")%>
      <%= f.text_field :size, placeholder: "....", class: 'form-control' %>
    </div>
      <span class="image">
          <%= f.file_field :images,multiple: true, accept: "image/jpeg,image/gif,image/png" %>

        </span>
    <%= f.submit t("global.canpaigs.savechange"), method: :update, class: "btn btn-primary" %>
  <% end %>
  </div>
</div>

<%= form_for(@comment) do |f| %>
<%= f.hidden_field :idea_id %>
<%= form_for(@product) do |f| %>
<%= render 'comments/comment', object: f.object %>
<div class="field">
<%= f.text_area :content, placeholder: "Compose new product..." %>
</div>

<%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
